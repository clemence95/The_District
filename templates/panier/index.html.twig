{# templates/panier/afficher_panier.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% if panier is empty %}
        <p>Le panier est vide.</p>
    {% else %}
        <ul>
            {% for plat in panier %}
                <li>{{ plat }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

