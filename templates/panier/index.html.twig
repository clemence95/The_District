{# templates/panier/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1 class="dancing text-white">Votre Panier</h1>

    {% if panier is empty %}
        <p class="dancing text-white">Le panier est vide.</p>
    {% else %}
        <table class="table border border-dark bg-light">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Libelle</th>
                    <th>Prix</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {# Boucle pour afficher chaque élément du panier #}
                {% for plat in panier %}
                    <tr>
                        <td>
                            {% if plat.image %}
                                <img src="{{ asset('/IMG/' ~ plat.image)}}" alt="{{ plat.libelle }}" style="max-height: 50px;">
                            {% else %}
                                Aucune image disponible
                            {% endif %}
                        </td>
                        <td>{{ plat.libelle }}</td>
                        <td>{{ plat.prix }} €</td>
                        <td>
                            {# Liens pour ajouter, retirer ou supprimer des éléments du panier #}
                            <a href="{{ path('ajouter_au_panier', { plat: plat.id }) }}" class="btn btn-dark">Ajouter</a>
                            <a href="{{ path('retirer_du_panier', { plat: plat.id }) }}" class="btn btn-dark">Retirer</a>
                            <a href="{{ path('supprimer_du_panier', { plat: plat.id }) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}







