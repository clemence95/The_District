{# templates/panier/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1 class="text-white">Votre Panier</h1>

    {{ dump(panier) }}

    {% if panier is empty %}
        <p class="text-white">Le panier est vide.</p>
    {% else %}
        <ul>
            {% for plat in panier %}
                <li>
                    {{ plat.nom }} - {{ plat.prix }} €
                    <a href="{{ path('retirer_du_panier', {'plat': plat.id}) }}">Retirer du panier</a>
                </li>
            {% endfor %}
        </ul>
        {# Bouton de déconnexion #}
        <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
    {% endif %}
{% endblock %}



