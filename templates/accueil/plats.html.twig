{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}
    <!-- Section de la bannière -->
    <section class="banner d-flex" style="width: 100%; position: relative; height:300px;">
        <div class="container-fluid justify-content-center align-items-center height:100%;">
            <div class="video-container d-flex justify-content-center" style="width: 100%; height:100%;">
                <video id="myVideo" class="d-block video rounded-5" autoplay muted loop style="width:100%;">
                    <source src="{{ asset('video/pizza-fond.mp4') }}" type="video/mp4">
                    Votre navigateur ne prend pas en charge la lecture de vidéos HTML5.
                </video>
            </div>
            <div class="form_button d-none d-sm-flex col-12 col-sm-6 mb-3 mb-sm-0" role="search" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <form>
                    <input class="form-control" type="search" placeholder="Rechercher" aria-label="Search">
                    <button class="btn btn-outline-success" style="width: 20vh; height: 30px;" type="submit">Recherche</button>
                </form>
            </div>
        </div>
    </section>

    {# Affiche la liste des Plats #}
<section class="Plats bg-dark-subtil Lugrasimo py-5 mb-5">
    <h1 class="text-center dancing"><a href="#"class="text-decoration-none text-white">Plats</a></h1>
    <div class="container d-flex justify-content-center">
        <div class="row g-4">
    {% for plat in plats %}
        <div class="col-md-3">
            <div class="card zoom" style="background-image: url('{{ asset('/IMG/' ~ plat.image) }}'); background-size: cover; height: 250px;">
                <div class="card-body custom-card-body">
                    <h5 class="card-title text-center" style="line-height: 1;"><a href="#"class="text-dark">{{ plat.libelle }}</a></h5>
                    <p class="card-text text-center" style="line-height: 7;">{{ plat.prix }} €</p>
                    <a href="{{ path('ajouter_au_panier', {'plat': plat.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                </div>
            </div>
        </div>
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}